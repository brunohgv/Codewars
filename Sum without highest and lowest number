using System;
using System.Linq;

public static class Kata
{
  public static int Sum(int[] numbers)
  {
  int total = 0;
  int max = 0;
  int min = 0;
  if (numbers == null || numbers.Length <= 2)
  {
  return 0;
  }
   foreach (int i in numbers)
  {
  total += i;
  }
  max = numbers.Max();
  min = numbers.Min();
  total = total - (max + min);
  {
       return total;
  }
  }
}
